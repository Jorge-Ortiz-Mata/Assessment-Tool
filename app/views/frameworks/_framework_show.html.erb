<%= turbo_frame_tag "framework_show" do %>
<div class="px-20 pt-20 pb-5 text-center">
  <div class="inline-flex flex-col">
  
    <h2 class="text-3xl font-extrabold tracking-tight text-gray-900 sm:text-4xl">
      <%= @framework.name %>
    </h2>

    <p class="mt-5">
      Criteria:
      <strong><%= @framework.criteria.count %></strong>
    </p>

    <div class="inline-flex mx-auto mt-3">
      <%= turbo_frame_tag "frameworks_form" do %>
        <%= link_to edit_framework_path(@framework) do %>
          <i class="fa-solid fa-pen-to-square mt-auto mb-auto mr-5"></i>
        <% end %>
      <% end %>
        <%= button_to framework_path(@framework), method: :delete, "data-turbo-frame": "_top" do %>
          <i class="fa-solid fa-trash-can mt-auto mb-auto"></i>
        <% end %>
    </div>
  </div>
  <div class="mt-4 text-gray-500 w-2/5 mx-auto">
    <%= @framework.description %>
  </div>
</div>
<% end %>