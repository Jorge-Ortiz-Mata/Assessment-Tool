<%= render "framework_show" %>

<%# ------- Criterium form ---- %>
<div class="text-center inline-flex flex-col mx-auto bg-pointbgray rounded-3xl mt-10 p-10" style="width: 1000px;">
  <div class="inline-flex flex-col">
      <%= render "criteria/form", { criterium: @criterium, framework: @framework, title: "New Criterion.", id: "criteria_form" } %>
  </div>
</div>
<%# ------------------------- %>

<%# -------- All criteria ----- %>
<div class="text-center inline-flex flex-col mx-auto bg-pointbgray rounded-3xl mt-10 p-10" style="width: 1000px;">
  <div class="inline-flex flex-col">
    <h3 class="text-3xl font-extrabold tracking-tight text-gray-900">
      Criteria
    </h3>
    <%= turbo_frame_tag "criteria" do %>
      <% @framework.criteria.each do |criterium| %>
        <%= render criterium %>
      <% end %>
    <% end %>
  </div>
</div>
<%# ------------------------- %>

  