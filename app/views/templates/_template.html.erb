<div id="<%= dom_id template %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= template.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= template.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this template", template, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this template', edit_template_path(template), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
